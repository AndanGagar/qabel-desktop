<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.text.Font?>
<?import java.lang.*?>
<VBox alignment="CENTER_RIGHT" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.qabel.desktop.ui.actionlog.item.MyActionlogItemController" fx:id="messages">
        <children>
            <HBox fx:id="myActionlog" alignment="CENTER_RIGHT">
                <children>
                    <HBox fx:id="shadow">
                        <children>
                            <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
                                <children>
                                    <BorderPane fx:id="myMessagebox">
                                        <center>
                                            <Label fx:id="textlabel" text="My Message" textAlignment="RIGHT"
                                                   textFill="WHITE" BorderPane.alignment="CENTER_RIGHT">
                                                <font>
                                                    <Font name="System" size="15.0"/>
                                                </font>

                                                <padding>
                                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                                </padding>
                                            </Label>
                                        </center>
                                        <bottom>
                                            <Label fx:id="dateLabel" text="My Message" textAlignment="RIGHT"
                                                   textFill="white" BorderPane.alignment="CENTER_LEFT">
                                                <font>
                                                    <Font name="System" size="10.0"/>
                                                </font>
                                            </Label>
                                        </bottom>
                                        <VBox.margin>
                                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                        </VBox.margin>
                                    </BorderPane>
                                </children>
                            </VBox>
                            <Polygon fill="grey" rotate="90" strokeType="INSIDE">
                                <points>
                                    <Double fx:value="-12.5"/>
                                    <Double fx:value="10.0"/>
                                    <Double fx:value="12.0"/>
                                    <Double fx:value="10.0"/>
                                    <Double fx:value="0.0"/>
                                    <Double fx:value="-12.5"/>
                                </points>
                                <HBox.margin>
                                    <Insets left="-12.0" top="20.0"/>
                                </HBox.margin>
                            </Polygon>
                        </children>
                        <BorderPane.margin>
                            <Insets left="5.0" top="12.0"/>
                        </BorderPane.margin>
                    </HBox>
                </children>
            </HBox>
        </children>
    </VBox>
