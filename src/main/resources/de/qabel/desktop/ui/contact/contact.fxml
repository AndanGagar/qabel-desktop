<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="contactroot" prefHeight="660.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.qabel.desktop.ui.contact.ContactController">
    <center>
        <ScrollPane fx:id="scroller" prefHeight="600.0" hbarPolicy="NEVER" fitToWidth="true" prefWidth="250">
            <content>
                <VBox fx:id="actionlogViewPane" maxWidth="600"/>
            </content>
        </ScrollPane>

    </center>
    <left>
        <ScrollPane fitToWidth="true" prefHeight="600.0" prefWidth="251.0">
            <content>
                <VBox fx:id="contactList" prefHeight="43.0" prefWidth="347.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Awesome Alias With A VERY long NAME">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label text="mail@qabel.de">
                            <VBox.margin>
                                <Insets left="5.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                    <children>
                        <Label fx:id="alias" text="Not so Awesome Alias">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" top="10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="email" text="mail@qabel.de">
                            <VBox.margin>
                                <Insets left="5.0" />
                            </VBox.margin>
                        </Label>
                    </children>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </VBox>
            </content>
            <BorderPane.margin>
                <Insets right="5.0" />
            </BorderPane.margin>
        </ScrollPane>
    </left>
    <bottom>
        <HBox prefHeight="60.0" prefWidth="400.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleImportContactsButtonAction" text="%importContacts">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#handleExportContactsButtonAction" text="%exportContacts">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
