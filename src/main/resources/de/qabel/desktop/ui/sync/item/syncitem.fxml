<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane
        fx:controller="de.qabel.desktop.ui.sync.item.SyncItemController"
        xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
        prefHeight="130.0" prefWidth="600.0" style="-fx-border-color: darkgrey; -fx-border-width: 0 0 1 0;">
            <left>
                <VBox fx:id="avatarContainer" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="30.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../../../../../folder.png" />
                            </image>
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </VBox.margin>
                        </ImageView>
                        <ProgressIndicator progress="100"/>
                    </children>
                </VBox>
            </left>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <center>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <center>
                        <VBox BorderPane.alignment="CENTER">
                            <children>
                                <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-spacing: 3;">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                    <children>
                                        <Label fx:id="name" text="My Documents">
                                            <font>
                                                <Font name="System Bold" size="22.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="localPath" text="local: /home/yourname/Documents" />
                                        <Label fx:id="remotePath" text="remote: /private/documents" />
                                    </children>
                                </VBox>
                                <Label maxWidth="1.7976931348623157E308" text="initializing...">
                                    <VBox.margin>
                                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                                    </VBox.margin>
                                    <padding>
                                        <Insets left="3.0" />
                                    </padding>
                                </Label>
                                <ProgressBar maxHeight="11.0" maxWidth="1.7976931348623157E308" prefHeight="0.0" prefWidth="519.0">
                                    <VBox.margin>
                                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                                    </VBox.margin>
                                </ProgressBar>
                            </children>
                        </VBox>
                    </center>
                    <right>
                        <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER">
                            <children>
                                <Button mnemonicParsing="false" text="..." />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </VBox>
                    </right>
                </BorderPane>
            </center>
        </BorderPane>